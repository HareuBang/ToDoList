<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="ko" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <script defer src="../test.js"></script>
  </head>
  <body>
    <!-- As a link -->
    <nav class="navbar text-bg-success">
      <div class="container-fluid">
        <a class="navbar-brand fw-bolder" href="/home" style="color: white;">To Do List</a>
        <div id="clock">
          <script>
            function updateClock() {
                const now = new Date();
                const year = now.getFullYear();
                const month = now.getMonth() + 1; // Months are zero-based
                const date = now.getDate();
                const hour = now.getHours();
                const minute = now.getMinutes();
                const second = now.getSeconds();
    
                // Format time with leading zeros if needed
                const formattedMonth = month < 10 ? '0' + month : month;
                const formattedDate = date < 10 ? '0' + date : date;
                const formattedHour = hour < 10 ? '0' + hour : hour;
                const formattedMinute = minute < 10 ? '0' + minute : minute;
                const formattedSecond = second < 10 ? '0' + second : second;
    
                document.getElementById('clock').innerHTML = 
                    `${year}-${formattedMonth}-${formattedDate} ${formattedHour}:${formattedMinute}:${formattedSecond}`;
            }
            
            setInterval(updateClock, 1000);
            updateClock();
        </script>
        </div>
      </div>
    </nav>